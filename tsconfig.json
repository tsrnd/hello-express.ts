{
    "compilerOptions": {
        "paths": {
            "*": ["types/*"],
            "@controllers/*": ["http/controllers/*"],
            "@models/*": ["models/*"],
            "@util/*": ["util/*"],
        },
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "type": [
        "node"
    ]
}
